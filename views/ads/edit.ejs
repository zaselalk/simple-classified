<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/ads/<%=ad._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
    <% if (csrfToken) { %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <% } %>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="Ad[title]"
          value="<%=ad.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="Ad[location]"
          value="<%=ad.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="category">Category</label>
        <select class="form-control" id="category" name="Ad[category]" required>
          <option value="">Select a category</option>
          <option value="Electronics" <%= ad.category === 'Electronics' ? 'selected' : '' %>>Electronics</option>
          <option value="Vehicles" <%= ad.category === 'Vehicles' ? 'selected' : '' %>>Vehicles</option>
          <option value="Real Estate" <%= ad.category === 'Real Estate' ? 'selected' : '' %>>Real Estate</option>
          <option value="Furniture" <%= ad.category === 'Furniture' ? 'selected' : '' %>>Furniture</option>
          <option value="Clothing" <%= ad.category === 'Clothing' ? 'selected' : '' %>>Clothing</option>
          <option value="Books" <%= ad.category === 'Books' ? 'selected' : '' %>>Books</option>
          <option value="Sports & Recreation" <%= ad.category === 'Sports & Recreation' ? 'selected' : '' %>>Sports & Recreation</option>
          <option value="Home & Garden" <%= ad.category === 'Home & Garden' ? 'selected' : '' %>>Home & Garden</option>
          <option value="Services" <%= ad.category === 'Services' ? 'selected' : '' %>>Services</option>
          <option value="Jobs" <%= ad.category === 'Jobs' ? 'selected' : '' %>>Jobs</option>
          <option value="Other" <%= ad.category === 'Other' ? 'selected' : '' %>>Other</option>
        </select>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Ad Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="Ad[price]"
            value="<%=ad.price %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="Ad[description]"
          required
        ><%= ad.description%></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="status">Status</label>
        <select class="form-control" id="status" name="Ad[status]" required>
          <option value="published" <%= ad.status === 'published' ? 'selected' : '' %>>Published</option>
          <option value="pending" <%= ad.status === 'pending' ? 'selected' : '' %>>Pending</option>
          <option value="draft" <%= ad.status === 'draft' ? 'selected' : '' %>>Draft</option>
        </select>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Add more image(s)...</span
            >
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <% ad.images.forEach(function(img, i) { %>

        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% })%>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Ad</button>
      </div>
    </form>
    <a href="/ads/<%= ad._id%>">Back To Ad</a>
  </div>
</div>
